@model Jester.Models.NewsItem

@{
    ViewData["Title"] = "Create";
    ViewData["CurrentNavigationPage"] = "Create";
}

<div class="text-center p-8 my-4">
    <h1 class="text-6xl">Add your own</h1>
</div>
<div class="flex p-4 m-4">
    <form asp-action="Create" class="w-full">
        <div asp-validation-summary="ModelOnly"></div>
        
        <div class="border border-solid my-4 p-4 shadow rounded flex flex-wrap gap-2">
            <div class="flex-grow">
                <label asp-for="Title"></label>
                <input asp-for="Title" placeholder="The fastest cruiseship to traverse the globe..." />
                <span asp-validation-for="Title"></span>
            </div>

            <div class="flex-grow">
                <label asp-for="Category"></label>
                <input asp-for="Category" placeholder="Travel" />
                <span asp-validation-for="Category"></span>
            </div>
            <div class="flex-grow">
                <label asp-for="DatePublished"></label>
                <input asp-for="DatePublished" />
                <span asp-validation-for="DatePublished"></span>
            </div>
            @*<div>
                <label asp-for="Author"></label>
                <input asp-for="Author" />
                <span asp-validation-for="Author"></span>
            </div>*@
            
            <div class="flex-grow">
                <label asp-for="Tags"></label>
                <input asp-for="Tags" placeholder="Cruise, Ocean, Journey"/>
                <span asp-validation-for="Tags"></span>
            </div>
            <div class="flex flex-col flex-grow flex-wrap">
                <label asp-for="IsSponsored">
                    Sponsored
                </label>
                 <input asp-for="IsSponsored" type="checkbox" class="w-6 min-h-6 m-2"/> 
            </div>
        </div>
        <div class="border border-solid my-4 p-4 shadow rounded">
        <div>
            <label asp-for="Content">Description</label>
            <input asp-for="Content" placeholder="Snippet / description ..."/>
            <span asp-validation-for="Content"></span>
        </div>
        </div>
        <div class="border border-solid my-4 p-4 shadow rounded">
        <div>
            <label asp-for="Story"></label>
            <textarea id="story" asp-for="Story" rows="15" cols="15"></textarea>
            <span asp-validation-for="Story"></span>
        </div>
        </div>
        <div>
            <input type="submit" value="Create" class="px-4 py-2 font-semibold text-sm bg-[#0d6efd] text-white rounded shadow-sm" />
        </div>
    </form>
</div>
