@model Jester.Models.NewsItem

@{
    ViewData["Title"] = "Delete";
    ViewData["CurrentNavigationPage"] = "Delete";
}

<div class="text-center p-8 my-4">
    <h1 class="text-4xl capitalize">Delete</h1>
    <p>Are you sure you want to delete this?</p>
</div>
<div class="flex flex-col items-center flex-wrap">
    <dl class="">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DatePublished)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DatePublished)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsSponsored)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsSponsored)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class="col-sm-10">
            <p>@(String.Join(", ", Model.Tags))</p>
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
